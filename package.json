{
  "name": "memorize",
  "displayName": "Memorize",
  "version": "0.0.1",
  "description": "Boost your English learning experience with the 'Memorize' extension, which seamlessly generates flashcards and automatically retrieves contextual information upon repetition. Additionally, it provides word definitions in English for enhanced comprehension.",
  "author": "polianfish@gmail.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "0.6.2",
    "@plasmohq/storage": "1.9.3",
    "@supabase/supabase-js": "2.39.3",
    "@tabler/icons-react": "^3.2.0",
    "express": "^4.19.2",
    "plasmo": "0.85.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-textarea-autosize": "^8.5.3",
    "reverso-api": "^2.22.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@parcel/diagnostic": "^2.12.0",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.19",
    "parcel": "^2.12.0",
    "postcss": "^8.4.38",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.3",
    "typescript": "5.3.3"
  },
  "manifest": {
    "key": "$CRX_KEY",
    "host_permissions": [
      "https://*/*"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "options.html"
        ],
        "matches": [
          "<all_urls>"
        ],
        "extension_ids": [
          "$CRX_ID"
        ]
      }
    ]
  },
  "pnpm": {
    "overrides": {
      "msgpackr@<1.10.1": ">=1.10.1",
      "axios@>=0.8.1 <0.28.0": ">=0.28.0"
    }
  }
}
